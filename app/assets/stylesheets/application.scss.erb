 //= depend_on_asset "handball goal.png"

@import "bootstrap-sprockets";
@import "bootstrap";

body { padding-top: 70px; }
.header-row {
  font-weight: bold;
}

a:visited.btn-success, a:visited.btn-primary, a:visited.btn-danger {
  color: #fff;
}

.handball-goal {
  position: relative;
  width: 516px;
  height: 359px;
  overflow: hidden;
  background-image: url('<%= asset_path("handball goal.png") %> ');
}

#canvas {
  cursor: pointer;
}

.handball {
  position: absolute;
  opacity: 0.3;
}

#handball {
  position: absolute;
  left: 380px;
  top: 240px;
  transition: left .1s ease-in, top .1s ease-in;
}

.score {
  text-align: center;
  font-size: 2em;
}