<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row header-row">
      <div class="col-xs-3">
        Name
      </div>
      <div class="col-xs-3">
        Number
      </div>
      <% if with_team_names %>
        <div class="col-xs-3">
          Team
        </div>
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <% players.each do |player| %>
      <div class="row">
        <div class="col-xs-3">
          <%= player.name %>
        </div>
        <div class="col-xs-3">
          <%= player.number %>
        </div>
        <% if with_team_names %>
          <div class="col-xs-3">
            <%= player.team.name %>
          </div>
        <% end %>
        <div class="col-xs-3">
          <%= link_to 'Details', player, class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>