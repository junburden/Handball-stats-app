<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for(tournament) do |f| %>
      <% if tournament.errors.any? %>
        <div class="alert alert-warning" id="error_explanation">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <h4><%= pluralize(tournament.errors.count, "error") %> prohibited this tournament from being saved:</h4>

          <ul>
          <% tournament.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-4 col-sm-6">

          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :league_id %>
            <%= f.collection_select :league_id, leagues, :id, :name, {prompt: true}, {class: "form-control"} %>
          </div>

          <div class="field">
            <%= f.label :start_date %>
            <%= f.date_field :start_date, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :end_date %>
            <%= f.date_field :end_date, class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>