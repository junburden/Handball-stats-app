<div class="row">
  <div class="col-md-9">
    <div class="handball-goal" id="canvas" onclick="canvasClickHandler(event)">
      <% if @shot.goal %>
        <%= image_tag "handball.png", style: "left: #{(@shot.x_position * 2 + 380 - 19).round.to_s}px; top: #{(480 - @shot.y_position * 2 - 19).round.to_s}px;", id: "handball" %>
      <% else %>
        <%= image_tag "handball-invert.png", style: "left: #{(@shot.x_position * 2 + 380 - 19).round.to_s}px; top: #{(480 - @shot.y_position * 2 - 19).round.to_s}px;", id: "handball" %>
      <% end %>
    </div>
  </div>
  <br>
  <div class="col-md-3 col-sm-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(shot) do |f| %>
          <% if shot.errors.any? %>
            <div class="alert alert-warning" id="error_explanation">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <h4><%= pluralize(shot.errors.count, "error") %> prohibited this shot from being saved:</h4>

              <ul>
              <% shot.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field" onclick="goalClickHandler(event)">
            <%= f.label :goal %>
            <%= f.check_box :goal %>
          </div>

          <div class="field">
            <%= f.label "7 metre" %>
            <%= f.check_box :seven %>
          </div>

          <div class="field">
            <%= f.text_field :x_position, type: "hidden" %>
          </div>

          <div class="field">
            <%= f.text_field :y_position, type: "hidden" %>
          </div>

          <div class="field">
            <%= f.label :game_id %>
            <%= f.collection_select :game_id, games, :id, :details, {}, {class: "form-control"} %>
          </div>

          <div class="field">
            <%= f.label :team_id %>
            <%= f.collection_select :team_id, teams, :id, :name, {prompt: true}, {class: "form-control"} %>
          </div>

          <div class="field">
            <%= f.label :shooter_id %>
            <%= f.collection_select :shooter_id, Player.all, :id, :name, {prompt: true}, {class: "form-control"} %>
          </div>

          <div class="field">
            <%= f.label :goalie_id %>
            <%= f.collection_select :goalie_id, Player.all, :id, :name, {prompt: true}, {class: "form-control"} %>
          </div>

          <div class="actions">
            <%= f.submit class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
