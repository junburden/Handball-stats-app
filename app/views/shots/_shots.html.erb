<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row header-row">
      <div class="col-xs-2">
        Team
      </div>
      <div class="col-xs-2">
        Shooter
      </div>
      <div class="col-xs-2">
        Goalie
      </div>
      <div class="col-xs-1">
        Goal
      </div>
      <div class="col-xs-1">
        7m
      </div>
      <div class="col-xs-1">
        Shot pos
      </div>
      <div class="col-xs-1">
        Shooter pos
      </div>
    </div>
  </div>
  <div class="panel-body">
    <% shots.each do |shot| %>
      <%= link_to edit_shot_path(shot) do %>
        <div class="row">
          <div class="col-xs-2">
            <%= shot.team.name %>
          </div>
          <div class="col-xs-2">
            <%= shot.shooter.name %>
          </div>
          <div class="col-xs-2">
            <%= shot.goalie.name %>
          </div>
          <div class="col-xs-1">
            <% if shot.goal %>
              <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <% end %>
          </div>
          <div class="col-xs-1">
            <% if shot.seven %>
              <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <% end %>
          </div>
          <div class="col-xs-1">
            <%= shot.x_position %>, <%= shot.y_position %>
          </div>
          <div class="col-xs-1">
            <%= shot.shooter_x_pos %>, <%= shot.shooter_z_pos %>
          </div>
          <div class="col-xs-2">
            <%= link_to 'Edit', edit_shot_path(shot), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
